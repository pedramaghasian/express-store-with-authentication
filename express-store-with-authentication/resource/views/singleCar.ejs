<%- include('./includes/header') -%>
<%- include('./includes/alert',{messages}) -%> 

<div class="contact container my-5">
  <div class="row">
    <div class="col-sm-12 col-md-6 d-flex flex-column justify-content-center">
      <h3 class="justify-self-center">مدل: <%=car.title %></h3>
      <hr />
      <h3 class="justify-self-center">رنگ: <%=car.color%></h3>
      <hr />
      <h3 class="justify-self-center">سال: <%=car.year %></h3>
      <hr />
      <h4>توضیحات: <%=car.description %></h4>
      <hr />
      <h5 class="lead">قیمت: <%=car.price %></h5>
      <hr />
      <button class="btn btn-success my-4">افزودن به سبد خرید</button>
    </div>
    <div class="col-sm-12 col-md-6 h-100">
      <img
        class="img-thumbnail h-25"
        src="/<%=car.img %>"
        alt="<%=car.title %> "
      />
    </div>
  </div>
</div>
<%- include('./includes/footer') -%>
