<%- include('../includes/header'); -%>

<div class="container">
    <div class="row pt-5 justify-content-center">
        <div class="col-sm-10 col-md-8">
            <div class="card ">
                <div class="card-header"><h5>عضویت در سایت</h5></div>
                <div class="card-body">
                    <form class="form-horizontal" method="POST" action="/auth/register" novalidate>

                        <%- include('../includes/alert',{messages}) -%> 

                        <div class="form-group mb-3">
                            <label for="username" class="control-label">نام کاربری</label>
                            <input id="username" type="text" class="form-control" name="username" value="" required >
                        </div>

                        <div class="form-group mb-3">
                            <label for="email" class="control-label">آدرس ایمیل</label>
                            <input id="email" type="email" class="form-control" name="email" value="" required="">
                        </div>
             

                        <div class="form-group mb-3">
                            <label for="password" class="control-label">کلمه عبور</label>
                            <input id="password" type="password" class="form-control" name="password" required="">
                        </div>

                                   <!-- gender -->
                                   <select class="form-select my-4" name="gender" aria-label="Default select example">
                                    <option selected>جنسیت</option>
                                    <option value="male">مرد</option>
                                    <option value="fmale">زن</option>
                                  </select>
                                <!-- end gender -->

      
                        <div class="form-group mb-3">
                            <button type="submit" class="btn btn-primary px-5">عضویت</button>
                            <!-- <a href="/login/google" class="btn btn-danger">ورود با اکانت گوگل</a> -->
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../includes/footer'); -%>