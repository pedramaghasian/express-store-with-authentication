<%- include('../includes/header'); -%>

<div class="container">
  <div class="row pt-5 justify-content-center">
    <div class="col-sm-10 col-md-8">
      <div class="card">
        <div class="card-header"><h5>ورود به سایت</h5></div>
        <div class="card-body">
          <form
            class="form-horizontal"
            method="POST"
            action="/auth/login"
            novalidate
          >
  

          <%- include('../includes/alert',{messages}) -%> 
              

            <div class="form-group mb-3">
              <label for="username" class="control-label">نام کاربری</label>
              <input
                id="username"
                type="text"
                class="form-control"
                name="username"
           
              />
            </div>

            <div class="form-group mb-3">
              <label for="password" class="control-label">کلمه عبور</label>
              <input
                id="password"
                type="password"
                class="form-control"
                name="password"
                required=""
              />
            </div>

            <div class="form-group mb-3 d-flex flex-row align-items-center ">
              <button type="submit" class="btn btn-success px-5"> ورود </button>
              <p class="align-self-center m-0 px-2">  یا  <a href="/auth/register">ثبت نام </a>کنید</p>
              <!-- <a href="/login/google" class="btn btn-danger">ورود با اکانت گوگل</a> -->
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../includes/footer'); -%>
